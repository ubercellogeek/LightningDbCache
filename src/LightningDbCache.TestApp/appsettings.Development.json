{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
          "Microsoft": "Warning",
          "Microsoft.Hosting.Lifetime": "Information",
          "System": "Warning"
      }
    },
    "Using":  [ "Serilog.Sinks.Console" ],
    "WriteTo": [
      { 
        "Name": "Async",
        "Args": {
          "configure": [{
            "Name": "Console",
            "Args": {
              "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
              "outputTemplate": "[{Timestamp:HH:mm:sss} {Level:u3}] [{ThreadId}] [{SourceContext}] {Message:lj} {NewLine}{Exception}"
            }
          }]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
